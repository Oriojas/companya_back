# Filecoin Bridge Service Configuration
# Copy this file to .env and configure your settings

# Server Configuration
PORT=3001
NODE_ENV=development

# Filecoin Configuration
FILECOIN_PRIVATE_KEY=your_private_key_here
FILECOIN_RPC_URL=https://api.calibration.node.glif.io/rpc/v1

# File Upload Limits
MAX_FILE_SIZE=104857600
# 100MB in bytes (100 * 1024 * 1024)

# Storage Configuration
DEFAULT_STORAGE_DURATION_DAYS=30
MIN_FILE_SIZE_BYTES=127

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/tmp/filecoin-bridge-service.log

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Service Configuration
ENABLE_CDN=true
AUTO_FUND_ACCOUNT=false
DEFAULT_FUND_AMOUNT=2.5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Example values for testing:
# FILECOIN_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# PORT=3002
